<% if user_signed_in? %>

  <% if current_user.already_favorites?(book) %>
    <span class='pr-3' style='text-decoration: none;'>いいね</span>

    <%= link_to book_favorites_path(book), remote: true, method: :delete do %>
      <i class="fas fa-heart"></i>
    <% end %>

  <% else %>
    <span class='pr-3' style='text-decoration: none;'>いいね</span>
    <%= link_to book_favorites_path(book), remote: true, method: :post do %>
    <i class='far fa-heart'></i>
    <% end %>

  <% end %>

<% else %>
  <span>いいね</span>
  <i class='fas fa-heart'></i>
<% end %>

<span><%= book.favorites.count %></span>
